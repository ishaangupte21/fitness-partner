<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Name"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginVertical="5dp"
        android:id="@+id/athlete_individual_workout_name"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginVertical="5dp"
        android:id="@+id/athlete_individual_workout_exercise"
        />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginVertical="5dp"
        android:id="@+id/athlete_individual_workout_due_date"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/athlete_individual_workout_complete_button"
        android:text="Mark as Complete"/>

    <ProgressBar
        android:id="@+id/complete_button_spinner"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />



</LinearLayout>